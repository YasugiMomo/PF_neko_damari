<div class="container">
  <div class="row">
    <div class="col-8 mt-4 px-sm-0 offset-sm-1">
      <h2>会員情報編集</h2>
    </div>

    <div class="col-4 mx-auto pt-4">
      <%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>

        <div class="field">
          <%= f.label "ニックネーム" %><br />
          <%= f.text_field :nickname, autofocus: true, placeholder: "20文字以内", class: "form-control" %>
        </div>

        <div class="field mb-4 pt-4">
          <%= f.label "プロフィール画像" %><br />
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>

          <%= f.submit '保存', class: "btn btn-success offset-4" %>
      <% end %>

    </div>
  </div>
</div>


