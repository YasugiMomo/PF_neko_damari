    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>ニックネーム</th>
            <th>メールアドレス</th>
            <th>レビュー数</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% customers.each do |customer| %>
        <tbody>
          <tr>
            <th><%= customer.id %></th>
            <td>
              <%= image_tag customer.get_profile_image(100,100) %><br>
              <%= link_to customer.nickname, admin_customer_path(customer.id) %>
            </td>
            <td><%= customer.email %></td>
            <td><%= link_to customer.reviews.count, admin_customer_path(customer.id) %>件のレビュー</td>
            <!--true=退会済み、false=有効-->
            <% if customer.is_status == true %>
              <td class="text-secondary">退会</td>
            <% else %>
              <td class="text-success">有効</td>
            <% end %>
          </tr>
        </tbody>
        <% end %>
      </table>
      <div class="row justify-content-center">
        <%= paginate customers %>
      </div>
    </div>
