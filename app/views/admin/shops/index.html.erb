<div class="container">
  <div class="row">
    <div class="col-10 mt-4">
      <h2>猫カフェ一覧</h2>
    </div>

      <!--絞り込み機能-->
      <div class="col-4 offset-2 my-2">
        <%= link_to '評価の高い順', admin_shops_path(star_count_desc: "true") %>|
        <%= link_to '評価の低い順', admin_shops_path(star_count_asc: "true") %>
      </div>
      <!--検索機能-->
      <div class="col-4 search_form offset-1 my-2">
        <%= form_with url: admin_shops_search_path, local: true, method: :get do |f| %>
         <%= f.text_field :word, placeholder: "店舗名で検索" %>
         <%= f.submit "検索", class: "btn btn-primary" %>
        <% end %>
      </div>

    <%= render 'index', shops: @shops %>
  </div>
</div>