<div class="container">
  <div class="row">
    <div class="col-8 mt-4">
      <h2>レビュー編集</h2>
    </div>

    <div class="col-6 mx-auto mt-4">
      <%= form_with model: @review, url: shop_review_path(@review.id), method: :patch do |f| %>

        <div class="field">
          <%= f.label "タイトル" %><br />
          <%= f.text_field :title, autofocus: true, placeholder: "タイトル", class: "form-control" %>
        </div>

        <div class="field mt-4">
          <%= f.label "レビュー" %><br />
          <%= f.text_area :content, class: "form-control" %>
        </div>

        <div class="field my-4">
          <div><%= f.label "画像を投稿する" %></div>
          <%= f.file_field :profile_image, placeholder: "レビュー画像", accept: "image/*" %>
        </div>

        <div class="row justify-content-center">
          <%= f.submit '保存', class: "btn btn-success" %>
        </div>

      <% end %>
    </div>
  </div>
</div>

