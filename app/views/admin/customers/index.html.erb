<div class="container">
  <div class="row">
    <div class="col-10 mt-2 mb-4">
      <h2>会員一覧</h2>
    </div>

    <!--検索機能-->
    <div class="col-10 search_form my-2 text-right">
      <%= form_with url:  admin_customers_search_path, local: true, method: :get do |f| %>
        <%= f.text_field :word, placeholder: "ニックネームで検索" %>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
    </div>

    <%= render 'index', customers: @customers %>

  </div>
</div>



