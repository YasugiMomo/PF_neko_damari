<div class="row">
  <div class="col-8 mt-4">
    <P>会員一覧</P>
  </div>
  <div class="col-10 mt-4">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col">会員ID</th>
          <th scope="col">ニックネーム</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">レビュー数</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <% @customers.each do |customer| %>
      <tbody>
        <tr>
          <th scope="row"><%= customer.id %></th>
          <td>
            <%= image_tag customer.get_profile_image(200,200) %><br>
            <%= link_to customer.nickname, admin_customer_path(customer.id) %>
          </td>
          <td><%= customer.email %></td>
          <td><%= link_to customer.reviews.count, admin_customer_path(customer.id) %>件のレビュー</td>
          <!--true=退会済み、false=有効-->
          <% if customer.is_status == true %>
            <td class="text-secondary">退会</td>
          <% else %>
            <td class="text-success">有効</td>
          <% end %>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>



