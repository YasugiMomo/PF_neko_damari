<div class="container">
  <div class="row">
    <div class="col-10 mt-2 mb-4">
      <h2><%= t('.sign_in') %></h2>
    </div>

    <div class="col-4 mx-auto">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field pt-2">
          <%= f.label t('.email') %>
          <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field my-4">
          <%= f.label t('.password') %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <!--<div class="row justify-content-center pt-2">-->
        <!--  <% if devise_mapping.rememberable? %>-->
        <!--    <div class="field pt-2">-->
        <!--      <%= f.check_box :remember_me %>-->
        <!--      <%= f.label t('.remember_me') %>-->
        <!--    </div>-->
        <!--  <% end %>-->
        <!--</div>-->

        <div class="row actions justify-content-center mb-4">
          <%= f.submit t('.sign_in'), class: "btn btn-success" %>
        </div>
      <% end %>

      <div class="row justify-content-center">
        会員登録がまだの方は<%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>