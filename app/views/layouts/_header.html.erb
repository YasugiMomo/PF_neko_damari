<header>
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag ('/logo.png'), :size => '120x100' %>
      <% end %>
      <% if customer_signed_in? %>
        <p class="text-secondary font-weight-bold">ようこそ、<%= current_customer.nickname %>さん！</p>
      <% end %>
      <p></p>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <!--会員がログインした場合-->
        <% if customer_signed_in? %>
          <li>
            <%= link_to customer_path(current_customer), class: 'nav-link text-white border rounded mx-2 bg-info' do %>
              <i class="fas fa-home"></i> マイページ
            <% end %>
          </li>
          <li>
            <%= link_to shops_path, class: 'nav-link text-white border rounded mx-2 bg-info' do %>
             <i class="fas fa-paw"></i> 猫カフェ一覧
            <% end %>
          </li>
          <li>
            <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-white border rounded mx-2 bg-info' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>
        <!--管理者がログインした場合-->
        <% elsif admin_signed_in? %>
          <li>
            <%= link_to admin_shops_path, class: 'nav-link text-white border rounded mx-2 bg-info' do %>
             <i class="fas fa-paw"></i> 猫カフェ一覧
            <% end %>
          </li>
          <li>
            <%=  link_to admin_customers_path, class: 'nav-link text-white border rounded mx-2 bg-info' do %>
            <i class="fas fa-users"></i>会員一覧
            <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-white border rounded mx-2 bg-info' do %>
            <i class="fas fa-sign-out-alt"></i>ログアウト
            <% end %>
          </li>
        <!--ログインしていない場合-->
        <% else %>
          <li>
            <%= link_to root_path, class: 'nav-link text-white border rounded mx-2 bg-info' do %>
              <i class="fas fa-home"></i> Home
            <% end %>
          </li>
          <li>
            <%= link_to about_path, class: 'nav-link text-white border rounded mx-2 bg-info' do %>
              <i class="fas fa-link"></i> About
            <% end %>
          </li>
          <li>
            <%= link_to shops_path, class: 'nav-link text-white border rounded mx-2 bg-info' do %>
             <i class="fas fa-paw"></i> 猫カフェ一覧
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_registration_path, class: 'nav-link text-white border rounded mx-2 bg-info' do %>
              <i class="fas fa-user-plus"></i> 新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_session_path, class: 'nav-link text-white border rounded mx-2 bg-info' do %>
              <i class="fas fa-sign-in-alt"></i>ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>