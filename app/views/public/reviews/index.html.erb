<div class="container">
  <div class-"row">
    <div class="col-10 mt-2 mb-4">
      <h2><%= link_to @shop.name, shop_path(@shop) %>のレビュー</h2>
    </div>

    <div class="col-8 tag-search border mx-auto mb-4">
      <div class="row border-bottom justify-content-center">
        <p>タグで検索</p>
      </div>
      <div class="row">
        <% @tag_list.each do |list| %>
          <p class="mx-2 mt-2">
            <%= link_to list.tag_name, tag_reviews_path(list.id), class: "border-bottom" %>
            <%= "(#{list.reviews.count})" %>
          </p>
        <% end %>
      </div>
    </div>

    <%= render 'index', reviews: @reviews %>

  </div>
</div>