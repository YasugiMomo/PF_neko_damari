
  <table class='table'>
    <tr><%= image_tag customer.get_profile_image(100,100) %></tr>
    <tr>
      <th>ニックネーム：</th>
      <td><%= customer.nickname %></td>
    </tr>
    <tr>
      <th>intoroduction：</th>
      <td><%= customer.introduction %></td>
    </tr>
    <tr>
      <th>レビュー数：</th>
      <td><%= customer.reviews.count %>件</td>
    </tr>
  </table>

  <div class='row'>
      <!--編集ページへのリンク-->
      <% if current_customer == customer %>
        <%= link_to edit_customer_path(customer), class: "btn btn-outline-secondary btn-block edit_customer_#{customer.id}" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      <% end %>
  </div>